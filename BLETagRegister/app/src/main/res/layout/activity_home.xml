<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ossf.www.bletagregister.HomeActivity">

    <Button
        android:id="@+id/AddBLEButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ConnectXbeeButton"
        android:layout_marginEnd="29dp"
        android:onClick="onAddBLE"
        android:text="Add BLE" />

    <Button
        android:id="@+id/ConnectXbeeButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:onClick="onConnectXbee"
        android:text="Connect Xbee" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="461dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/AddBLEButton"
        android:id="@+id/lv_regDevice"/>

</RelativeLayout>
